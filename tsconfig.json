{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "outDir": "lib",
    "typeRoots": [
      "node_modules/@types"
    ],
    "sourceMap": true,
    "inlineSources": true
  },
  "compileOnSave": false,
  "include": [
    "node_modules/@types",
    "src/**/*.ts",
    "src/**/*.js"
  ]
}
